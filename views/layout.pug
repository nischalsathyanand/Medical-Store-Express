doctype html
html
    head
        title MEDICINE APP
        link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet', href='/css/style.css')
    body
        .container
            nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
                a.navbar-brand(href='#') MEDICINE APP
                button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbar', aria-controls='navbar', aria-expanded='false', aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbar.collapse.navbar-collapse
                    ul.navbar-nav.mr-auto
                        li.nav-item.active
                            a.nav-link(href='/') Home
                            span.sr-only (current)
                        li.nav-item
                            a.nav-link(href='/medicines/add') ADD MEDICINES
                        li.nav-item
                            a.nav-link(href='/user/login') Logout
                            //form.form-inline.my-2.my-lg-0
                        form(method='GET',class='search', action='/medicines/search/')
                         input.form-control.mr-sm-2(type='search', placeholder='Search Med', aria-label='Search')
                         button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search Med
        .container
            br
            br
            br
            != messages('message', locals)
            if errors
                each error in errors
                    div(class='alert alert-danger') #{error.msg}
            block content
        script(src='https://code.jquery.com/jquery-3.5.1.min.js')
        script(src='/bootstrap/js/bootstrap.js')
        script(src='https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js')
        script(src="../js/main.js") 